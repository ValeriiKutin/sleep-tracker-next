generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/**
 * Це модель(таблиця) юзера
 */
model User {
  id           String   @id @default(uuid()) // це внутрішній унікальний ID для бази
  clerckUserId String   @unique // id від системи авторизації юзера через Clerk
  email        String   @unique // email користувача
  name         String? // name - це звичайно ім'я користувача
  imageUrl     String? // imageUrl - це звичайно юрл картинки користувача
  createdAt    DateTime @default(now()) // тут зберігається коли створений користувач now()
  updatedAt    DateTime @updatedAt // зберігається дата коли оновлено користувача
  Records      Record[] // Масив записів сну, саме той що належить цьому користувачу
}

/**
 * Це модель(таблиця) записів сну юзера
 */
model Record {
  id        String   @id @default(uuid()) // унікальний ID кожного запису
  text      String // текст запису
  amount    Float // кількість годин сну
  date      DateTime @default(now()) // дата сну, по дефолту буде підставлятись сьогоднішня
  userId    String // userId посилається на clerckUserId і тут буде саме значення clerckUserId, що буде зв'язувати запис і юзера
  user      User     @relation(fields: [userId], references: [clerckUserId], onDelete: Cascade) /* тобто коли в userId стоїть abcd123, це належить користувачу з clerckUserId = abcd123 
  onDelete: Cascade - це означає, якщо видалити користувача, усі його записи сну теж автоматично вадаляються
  */
  createdAt DateTime @default(now())

  @@index([userId]) /* це покращувач швидкості */
}

